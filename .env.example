# Environment Variables for Qt Tradebot

# Finnhub API (for market data)
FINNHUB_API_KEY=your_finnhub_api_key_here

# FMP API (alternative market data source)
FMP_API_KEY=your_fmp_api_key_here

# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET=your_alpaca_secret_key_here
ALPACA_MODE=paper  # or 'live' for production

# Grok AI (xAI) API
XAI_API_KEY=your_xai_api_key_here

# Redis Configuration
REDIS_URL=redis://:pass123@redis:6379/0

# PostgreSQL Configuration  
DATABASE_URL=postgresql://postgres:pass123@postgres:5432/qt_trade

# Celery Configuration
CELERY_BROKER_URL=redis://:pass123@redis:6379/0
CELERY_RESULT_BACKEND=redis://:pass123@redis:6379/0